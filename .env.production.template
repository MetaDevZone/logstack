# Environment Variables Template for Production
# Copy this file to .env.production and update with your actual values

# === DATABASE CONFIGURATION ===
# MongoDB connection string for production
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/logstack-production
# Alternative variable name (some apps use this)
DB_URI=mongodb://username:password@your-mongodb-host:27017/logstack-production

# === AWS S3 CONFIGURATION ===
# AWS credentials - get these from AWS IAM
AWS_ACCESS_KEY_ID=AKIA_YOUR_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# AWS region where your S3 bucket is located
AWS_REGION=us-east-1

# S3 bucket name for storing log files
S3_BUCKET=your-production-logstack-bucket

# === APPLICATION SETTINGS ===
# Environment (production, staging, development)
NODE_ENV=production

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# === OPTIONAL SETTINGS ===
# Port for health check endpoint (default: 3000)
PORT=3000

# Custom retention days (override defaults)
DB_RETENTION_DAYS=14
FILE_RETENTION_DAYS=180

# === SECURITY SETTINGS ===
# Enable/disable various masking features
MASK_PASSWORDS=true
MASK_EMAILS=false
MASK_IPS=false

# === MONITORING ===
# Enable application monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL=300000

