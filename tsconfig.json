{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "lib/**/*", "models/**/*", "types/**/*", "examples/**/*", "index.ts"],
  "exclude": ["dist", "node_modules", "test", "**/*.test.ts"]
}
